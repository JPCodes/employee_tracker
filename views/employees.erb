<h1>Employees</h1>

<h4>Employee list:</h4>

<% if @all_employees.any? %>
  <ul>
    <% @all_employees.each do |employee| %>
        <li><a href="/employee/<%= employee.id %>"><%= employee.name %></a></li>
    <% end%>
  </ul>
<% else %>
  <p>There are no employees yet....</p>
<% end %>

<form action="/employees_form" method="post">
  <label for="name_input">Enter Employee Name</label>
  <input type="text" id="name_input" name="name_input">

  <button type="submit" class="btn btn-danger">Add Employee</button>
</form>

<p><a href="/">Home</a></p>
